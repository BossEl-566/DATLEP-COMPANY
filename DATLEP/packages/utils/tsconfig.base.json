{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["DOM", "DOM.Iterable", "ES2021"],

    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "jsx": "preserve",

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "baseUrl": ".",
    "paths": {
      "@apps/*": ["apps/*"],
      "@libs/*": ["libs/*"]
    }
  }
}
